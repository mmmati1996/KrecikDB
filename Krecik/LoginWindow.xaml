<Window x:Class="Krecik.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Krecik"
        mc:Ignorable="d"
        Title="Zaloguj się do systemu." Height="300" Width="300">
    <Grid>
        <TextBox Name="LoginBox" HorizontalAlignment="Left" Height="26" Margin="86,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="86,111,0,0" Width="187" Height="26" PasswordChar="*"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="26,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Hasło:" HorizontalAlignment="Left" Margin="26,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Witamy w systemie magazynowo-księgowym &#xD;&#xA;'Krecik'" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="53"/>
        <Button Content="Zaloguj" HorizontalAlignment="Left" Margin="86,151,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
